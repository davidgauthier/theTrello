{% extends '::layout.html.twig' %}

{% block title %}
    {{ parent() }} - New Task
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}




{% block content %}
<div class="row">


    {{ form_start(formTask, {'attr': {'class': ''}}) }}

    {# Les erreurs générales du formulaire. #}
    {{ form_errors(formTask) }}

    {# Génération du label + error + widget pour un champ. #}
    {#{{ form_row(formTweet.message) }}#}




    {# Génération manuelle et éclatée : #}
    <div class="form-group">
        {#Génération du label. #}
        {{ form_label(formTask.name, null, {'label_attr': {'class': 'control-label'}}) }}
        {#Affichage des erreurs pour ce champ précis. #}
        {{ form_errors(formTask.name) }}
        {#Génération de l'input. #}
        {{ form_widget(formTask.name, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">
        {#Génération du label. #}
        {{ form_label(formTask.description, null, {'label_attr': {'class': 'control-label'}}) }}
        {#Affichage des erreurs pour ce champ précis. #}
        {{ form_errors(formTask.description) }}
        {#Génération de l'input. #}
        {{ form_widget(formTask.description, {'attr': {'class': 'form-control'}}) }}
    </div>



    <div class="form-group">
        {#Génération du label. #}
        {{ form_label(formTask.category, null, {'label_attr': {'class': 'control-label'}}) }}
        {#Affichage des erreurs pour ce champ précis. #}
        {{ form_errors(formTask.category) }}
        {#Génération de l'input. #}
        {{ form_widget(formTask.category, {'attr': {'class': 'form-control'}}) }}
    </div>


    <button type="submit" class="btn btn-default">Submit</button>



    {# Génération automatique des champs pas encore écrits.
     Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
     et tous les champs cachés (type « hidden »). #}
    {{ form_rest(formTask) }}

    {# Fermeture de la balise <form> du formulaire HTML #}
    {{ form_end(formTask) }}


    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

