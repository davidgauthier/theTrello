{% extends '::layout.html.twig' %}

{% block title %}
    {{ parent() }} - Home
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}


{% block content %}

    <div class="row">
        {# On boucle sur les categories #}
        {% for index, category in listCategories %}

            <div class="col-md-3">

                <h2>{{ category.name }} <span class="badge">{{ category.tasks|length }}</span>
                    {#<span class="pull-right">btns</span>#}
                </h2>

                {# On boucle sur les taches d'une categorie #}
                {% for index2, task in category.tasks %}

                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">
                                {{ task.name }}
                                <a href="{{ path('app_task_edit', {'idTask': task.id}) }}" class="btn btn-default btn-xs pull-right">
                                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                                </a>
                            </h3>

                        </div>
                        <div class="panel-body">
                            <p>{{ task.description }}</p>
                        </div>
                    </div>

                {% endfor %}

            </div> <!-- end .col-md-3 -->

        {% else %}

            <p>Aucune cat√©gorie ...</p>

        {% endfor %}




    </div> <!-- end .row -->


{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}














